{
  "name": "atlassian-ai-assistant",
  "displayName": "Atlassian AI Assistant",
  "description": "AI-powered code generation using Jira stories and Confluence documentation",
  "version": "0.0.1",
  "publisher": "atlassian-demo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/atlassian-demo/atlassian-ai-assistant"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "atlassian-ai-assistant.generateCode",
        "title": "ðŸ¤– Generate Code from Jira Story",
        "category": "Atlassian AI"
      },
      {
        "command": "atlassian-ai-assistant.openProject",
        "title": "ðŸš€ Open Your Atlassian Projects",
        "category": "Atlassian AI"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "atlassian-ai-assistant.generateCode",
          "title": "ðŸ¤– Generate Code from Jira Story"
        },
        {
          "command": "atlassian-ai-assistant.openProject",
          "title": "ðŸš€ Open Your Atlassian Projects"
        }
      ]
    },
    "configuration": {
      "title": "Atlassian AI Assistant",
      "properties": {
        "atlassianAI.email": {
          "type": "string",
          "default": "",
          "description": "Your Atlassian email address"
        },
        "atlassianAI.token": {
          "type": "string",
          "default": "",
          "description": "Your Atlassian API token"
        },
        "atlassianAI.site": {
          "type": "string",
          "default": "",
          "description": "Your Atlassian site (e.g., yourcompany.atlassian.net)"
        },
        "atlassianAI.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenAI API key"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "dotenv": "^17.0.1",
    "openai": "^5.8.2"
  }
}
